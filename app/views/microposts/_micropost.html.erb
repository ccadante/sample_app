<li>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    发布于 <%= time_ago_in_words(micropost.created_at) %> 前.
  </span>
  <% if current_user?(micropost.user) %>
  <%= link_to "删除", micropost, method: :delete,
              data: {confirm: "确认删除?"},
              title: micropost.content %>

      <% end %>
</li>
